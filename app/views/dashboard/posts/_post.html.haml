.post
  %p=post.created_at.to_date.strftime("%y %^b %d")
  %h3 Title
  %p=post.title
  - description = post.description.split('</p>').join(' ')
  - description = strip_tags(description).split(' ')
  - description.length > 10 ? extra = '...' : extra = ''
  = description.slice(0, 10).join(' ') + extra

  - if current_author.role == "admin"
    = link_to post.author.nickname, dashboard_posts_path(nickname: post.author.nickname)
  %ul
    = render post.tags
  = link_to 'Show', dashboard_post_path(post.id)
  = link_to 'Edit', edit_dashboard_post_path(post.id)
  = link_to 'Destroy', dashboard_post_path(post.id), method: 'delete'
