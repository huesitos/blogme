- @words_content = 30
- @words_title = 20

- if not @posts.empty?
  - main = true
  - pa = @posts.to_a
  .row
    .col-sm-12
      - @main = true
      = render pa.shift, locals: {main: @main}

  - @words_content = 10
  - @words_title = 11
  - main = false
  .row
    - pa.each do |p|
      .col-sm-6
        - @main = false
        = render p, locals: {main: @main}



