.post-full
  %h2= @post.title
  %p= @post.created_at.to_time.strftime("%y %^b %d %H:%M:%S")
  %p= @post.description
  %ul
    = render @post.tags

  .comments
    = render @post.comments

  = form_for @comment, url: comments_path(@post.id) do |f|
    .field
      = f.label :name
      = f.text_field :name
    .field
      = f.label :content
      = f.text_area :content
    .field
      = f.submit 'Comment'
